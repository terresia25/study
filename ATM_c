#include <stdio.h>
void sort(int *N,int len)
{
    int i, j;
    int temp;
    for (i = 0;i < len;i++)
    {
        for (j = 0;j <len-(i+1);j++)
        {
            if (N[j] > N[j + 1])
            {
                temp = N[j];
                N[j] = N[j + 1];
                N[j + 1] = temp;
            }
        }
    }
}
 
void ATM()
{
    int N;
    int arr[20];
    int i;
    int sum1 = 0;
    int sum2 = 0;
    scanf("%d", &N);
    for (i = 0;i < N;i++)
        scanf("%d", &arr[i]);
    sort(arr,N);
    for (i = 0;i < N;i++)
    {
        sum1 += arr[i];
        sum2 += sum1;
    }
    printf("%d", sum2);
}
int main()
{
    ATM();
}
