import java.util.Arrays;
import java.util.Scanner;

public class Main{
  public static void main(String[] args){
    Scanner sc=new Scanner(System.in);
    int N=sc.nextInt();
   
    int arr[]=new int[N];
    for(int i=0;i<N;i++) arr[i]=sc.nextInt();
    Arrays.sort(arr);
    
    int sum1=0;
    int sum2=0;
    for(int j=0;j<N;j++){
      sum1+=arr[i];
      sum2+=sum1;
    }
    System.out.println(sum2);
  }
}
