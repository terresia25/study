<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".InfoEditActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:text="사용자 정보 수정"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="PASSWORD"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/user_pw_edit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="@drawable/databox"
            android:hint="   PASSWORD"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:text="ADDRESS"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/user_address_edit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="@drawable/databox"
            android:hint="   ADDRESS"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="PHONE"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/user_phone_edit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="@drawable/databox"
            android:hint="   PHONE"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="E-MAIL"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/user_email_edit"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:background="@drawable/databox"
            android:hint="   EMAIL"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/update_start"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/joinbutton"
        android:layout_gravity="center"
        android:layout_marginTop="35dp" />

</LinearLayout>